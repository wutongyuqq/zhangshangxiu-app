<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prepare_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff9db4"
                android:gravity="center"
                android:padding="10dp"
                android:text="待领工"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ff9db4" />

            <TextView
                android:id="@+id/doing_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#a4a3a3"
                android:gravity="center"
                android:padding="10dp"
                android:text="修理中"
                android:textColor="#333333"
                android:textSize="17sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ff9db4" />

            <TextView
                android:id="@+id/prepare_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#a4a3a3"
                android:gravity="center"
                android:padding="10dp"
                android:text="待质检"
                android:textColor="#333333"
                android:textSize="17sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ff9db4" />

            <TextView
                android:id="@+id/done_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#a4a3a3"
                android:gravity="center"
                android:padding="10dp"
                android:text="已完工"
                android:textColor="#333333"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xuanzegongzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_bg"
                android:drawableRight="@drawable/sanjx"
                android:padding="5dp"
                android:text="选择工种"
                android:textColor="#6cbee9"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/search_cp"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_border_bg"
                android:hint="输入"
                android:padding="5dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/red_white_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jinchangshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sjx_down"
                android:text="进厂时间"
                android:tag="0"
                android:textColor="#6cbee9"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/jiaocheshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/sjx_down"
                android:text="交车时间"
                android:textColor="#6cbee9"
                android:tag="0"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/my_renwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/right_now_no"
                android:text="我的任务"
                android:drawablePadding="5dp"
                android:textColor="#6cbee9"
                android:tag="0"
                android:textSize="17sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />


    </LinearLayout>
</LinearLayout>
