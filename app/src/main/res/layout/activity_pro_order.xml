<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/nav_support" />

        <include layout="@layout/info_support" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff9db4"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="项目"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_pj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A4A3A3"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="配件"
                android:textColor="#666666" />


        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:scrollbars="none"/>

            <ListView
                android:id="@+id/listview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_marginBottom="80dp"
                android:scrollbars="none"/>

    </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/pro_btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="钣金喷漆"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/project_ck"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="项目库"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/temp_pro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="临时项目"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_home_page"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="本车首页"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/paigong"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="派工"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/total_jiesuan2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="结算"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pj_btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#ffffff"
        android:visibility="gone"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/peijianku"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="配件库"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/car_home_page2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="本车首页"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/total_jiesuan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#89c997"
                android:gravity="center"
                android:padding="10dp"
                android:text="结算"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/img_wg_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/img_wg"/>

    </RelativeLayout>

</RelativeLayout>