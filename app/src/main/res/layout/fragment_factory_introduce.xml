<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="今日进厂"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="在厂车辆"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="今日出厂"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_enter_factory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/car_in_factory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="13"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/car_out_factory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="11"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/intro_gjz"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="估价中"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_gj_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_dpg"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待派工"

                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_dpg_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_dlg"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待领工"

                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_dlg_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/intro_xlz"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修理中"

                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_xlz_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_dzj"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待质检"

                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_dzj_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_djs"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待结算"

                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_djs_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/intro_dcc"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@drawable/gray_back_introduce"
                android:gravity="center"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待出厂"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/car_dcc_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>